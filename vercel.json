{
  "name": "talentia",
  "version": 2,
  "public": true,
  "buildCommand": "echo 'No build needed for static site'",
  "outputDirectory": ".",
  "cleanUrls": true,
  "trailingSlash": false,
  "env": [
    "FIREBASE_API_KEY",
    "FIREBASE_AUTH_DOMAIN",
    "FIREBASE_PROJECT_ID",
    "FIREBASE_STORAGE_BUCKET",
    "FIREBASE_MESSAGING_SENDER_ID",
    "FIREBASE_APP_ID"
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "node18.x"
    }
  }
}
